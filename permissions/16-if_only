#!/bin/bash

# Check if the file 'hello' exists in the current directory
if [ ! -e hello ]; then
  echo "File 'hello' does not exist."
  exit 1
fi

# Get the owner of the file 'hello'
owner=$(stat -c %U hello)

# If the owner is 'guillaume', change it to 'vincent'
if [ "$owner" = "guillaume" ]; then
  chown vincent hello
fi
